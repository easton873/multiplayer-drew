{
    "name": "multiplayer-drew",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "test": "npx mocha",
        "start": "npm run build && node --enable-source-maps --trace-warnings --trace-deprecation --loader ts-node/esm src/server/server.ts",
        "build:server": "esbuild src/server/server.ts --bundle --platform=node --format=cjs --packages=external --outfile=server-bundle.cjs",
        "build:binary": "npm run build && npm run build:server && pkg server-bundle.cjs --config package.json --out-dir binaries && rm server-bundle.cjs"
    },
    "pkg": {
        "assets": ["dist/**/*"],
        "targets": [
            "node20-win-x64",
            "node20-macos-x64",
            "node20-macos-arm64",
            "node20-linux-x64"
        ],
        "outputPath": "binaries"
    },
    "author": "",
    "dependencies": {
        "express": "^4.21.2",
        "socket.io": "^4.8.1",
        "socket.io-client": "^4.8.1"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.14.1",
        "@yao-pkg/pkg": "^5.14.0",
        "esbuild": "^0.25.0",
        "mocha": "^11.1.0",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.3",
        "typescript": "^4.9.5",
        "vite": "^6.2.6"
    }
}
